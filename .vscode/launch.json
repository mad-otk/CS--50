
    // your_project/.vscode/launch.json

{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug with GDB",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/Week1/week1Prime",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        
        "preLaunchTask": "build",
        "miDebuggerPath": "/path/to/your/gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }